<!--

    - _ViewStart.cshtml was made automatically and layout did not have to be specified.


    - Default routing code at Global.asax.
    - Also routing options.
    - We need an Index Controller or change RouteConfig.cs to use the ComicBooks controller.
-->

@model Comic_Book_Gallery.Models.ComicBook[]

@{
    ViewBag.Title = "Comic Books";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    @foreach (var comicBook in Model)
    {
        <div class="col-md-3">
            <h4>@comicBook.DisplayText</h4>
            <img src="/Images/@comicBook.CoverImageFileName"
                 alt=@comicBook.DisplayText
                 class="img-responsive" />
        </div>
    }
</div>
